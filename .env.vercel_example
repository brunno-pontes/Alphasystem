# Configurações para deploy no Vercel

# Chave secreta para a aplicação Flask
SECRET_KEY=sua_chave_secreta_gerada_aqui

# Configurações do banco de dados local (acessado remotamente via ngrok ou hospedado em provedor externo)
LOCAL_DB_USER=nome_usuario_banco_local
LOCAL_DB_PASSWORD=sua_senha_banco_local
LOCAL_DB_HOST=seu_host_banco_local_remoto  # Ex: xxx.ngrok.io, ou IP público, ou host de provedor de banco de dados
LOCAL_DB_PORT=3306
LOCAL_DB_NAME=alpha_local

# Configurações do banco de dados online (para validação de licenças)
ONLINE_DB_USER=nome_usuario_banco_online
ONLINE_DB_PASSWORD=sua_senha_banco_online
ONLINE_DB_HOST=host_banco_online
ONLINE_DB_PORT=3306
ONLINE_DB_NAME=alpha_online

# Configurações do usuário admin (opcionais)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=sua_senha_admin
ADMIN_EMAIL=seu_email_admin@empresa.com

# Configurações de email para recuperação de senha
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu_email@gmail.com
EMAIL_HOST_PASSWORD=sua_senha_de_app

# Chave de licença (opcional)
PRATELEIRA_LICENSE_KEY=sua_chave_de_licenca

# Outras configurações
FLASK_ENV=production