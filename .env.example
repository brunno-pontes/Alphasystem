# .env.example - Exemplo de arquivo de configuração
# Copie este arquivo para .env e adicione suas credenciais reais

# Chave secreta para a aplicação Flask
SECRET_KEY=sua_chave_secreta_gerada_aqui

# Configurações do banco de dados local
DB_USER=seu_usuario_do_banco
DB_PASSWORD=sua_senha_do_banco
DB_HOST=localhost
DB_PORT=3306
DB_NAME=alpha_local

# Configurações do banco de dados online (para validação de licenças)
ONLINE_DB_USER=seu_usuario_do_banco_online
ONLINE_DB_PASSWORD=sua_senha_do_banco_online
ONLINE_DB_HOST=endereco_do_servidor_online
ONLINE_DB_PORT=3306
ONLINE_DB_NAME=alpha_online

# Variáveis alternativas para configuração mais específica (opcional)
LOCAL_DB_USER=seu_usuario_local
LOCAL_DB_PASSWORD=sua_senha_local
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=3306
LOCAL_DB_NAME=alpha_local

# Configurações do usuário admin (opcional - valores padrão serão usados se não definidos)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@localhost.com

# Configurações de email para recuperação de senha
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu_email@gmail.com
EMAIL_HOST_PASSWORD=sua_senha_de_app

# Chave de licença (opcional, pode ser definida via variável de ambiente separada)
PRATELEIRA_LICENSE_KEY=SUA_CHAVE_DE_LICENCA